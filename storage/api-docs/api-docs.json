    "components": {
        "schemas": {
            "CompanyRequest": {
                "title": "Company Request",
                "description": "Schema for creating a new company",
                "required": [
                    "name",
                    "cnpj",
                    "plan"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "ACME Ltda"
                    },
                    "description": {
                        "type": "string",
                        "example": "Company description here"
                    },
                    "cnpj": {
                        "type": "string",
                        "example": "12.345.678/0001-99"
                    },
                    "plan": {
                        "type": "string",
                        "enum": [
                            "Free",
                            "Premium"
                        ],
                        "example": "Free"
                    }
                },
                "type": "object"
            },
            "JobRequest": {
                "title": "Job Request",
                "description": "Schema for creating or updating a job",
                "required": [
                    "title",
                    "type",
                    "company_id"
                ],
                "properties": {
                    "title": {
                        "type": "string",
                        "example": "Backend Developer"
                    },
                    "description": {
                        "type": "string",
                        "example": "Develop APIs with Laravel",
                        "nullable": true
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "PJ",
                            "CLT",
                            "Internship"
                        ],
                        "example": "CLT"
                    },
                    "salary": {
                        "type": "number",
                        "format": "float",
                        "example": 2500,
                        "nullable": true
                    },
                    "hours": {
                        "type": "integer",
                        "example": 6,
                        "nullable": true
                    },
                    "company_id": {
                        "type": "integer",
                        "example": 1
                    }
                },
                "type": "object"
            },
            "UserRequest": {
                "title": "User Request",
                "description": "Schema for creating or updating a user",
                "required": [
                    "name",
                    "email",
                    "cpf"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john@example.com"
                    },
                    "cpf": {
                        "type": "string",
                        "example": "123.456.789-00"
                    },
                    "age": {
                        "type": "string",
                        "format": "date",
                        "example": "1995-05-15",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "UserSearchRequest": {
                "title": "User Search Request",
                "properties": {
                    "per_page": {
                        "type": "integer",
                        "example": 10
                    },
                    "name": {
                        "type": "string",
                        "nullable": true
                    },
                    "email": {
                        "type": "string",
                        "nullable": true
                    },
                    "cpf": {
                        "type": "string",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Company": {
                "title": "Company",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Acme Corporation"
                    },
                    "description": {
                        "type": "string",
                        "example": "Leading tech company",
                        "nullable": true
                    },
                    "cnpj": {
                        "type": "string",
                        "example": "12.345.678/0001-99",
                        "nullable": true
                    },
                    "plan": {
                        "type": "string",
                        "example": "premium",
                        "nullable": true
                    },
